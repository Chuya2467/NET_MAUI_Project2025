<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2025.MovieDetails"
             Title="Movie Details">
    <VerticalStackLayout Padding="20">
        <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding Artist}" FontSize="Medium"/>
        <Label Text="{Binding Year}" FontSize="Medium"/>
        <Label Text="{Binding Genre}" FontSize="Medium"/>
        <Button Text="Back" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>